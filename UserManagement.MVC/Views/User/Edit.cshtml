@model UserManagement.MVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="card shadow-sm p-4 mt-4">
    <h4 class="mb-4">
        ✏️ Update User: <span class="text-primary">@ViewBag.UserName</span>
    </h4>

    <form asp-action="Edit" asp-controller="User" asp-route-id="@ViewBag.UserId" method="post">

        <div class="mb-3">
            <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-semibold">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label fw-semibold">User Role</label>
            <select asp-for="Role" class="form-select">
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Save Changes
        </button>

        <a asp-action="All" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
